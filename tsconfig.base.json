{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngserveio/hockey/core/api/services": [
        "hockey/core/api/services/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/api/application": [
        "hockey/game-stats/api/application/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/api/data-access": [
        "hockey/game-stats/api/data-access/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/api/services": [
        "hockey/game-stats/api/services/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/common": [
        "hockey/game-stats/common/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/ui/data-access": [
        "hockey/game-stats/ui/data-access/src/index.ts"
      ],
      "@ngserveio/hockey/game-stats/ui/stats-feature": [
        "hockey/game-stats/ui/stats-feature/src/index.ts"
      ],
      "@ngserveio/shared/realtime-communication/server-sent-events/api": [
        "shared/realtime-communication/server-sent-events/api/src/index.ts"
      ],
      "@ngserveio/shared/realtime-communication/server-sent-events/ui": [
        "shared/realtime-communication/server-sent-events/ui/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
